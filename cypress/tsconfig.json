{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "dom"],
    "types": ["cypress", "node", "./support"],
    "jsx": "preserve",
    "noUncheckedIndexedAccess": true,
    "baseUrl": "..",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../node_modules/cypress",
    "../eslintrc.cjs"
  ]
}
